		sleep 3
        rm -rf /root/build_ixp
        mkdir -pv /root/build_ixp
		echo "Retrieve Dockerfiles From Git"
        /usr/bin/git clone https://github.com/IXPControl/dockerfiles.git /root/build_ixp/
		