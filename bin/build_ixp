		echo -e "\e[32m     88   88 \`\"\"    Y8,,8P'     \`\"  88      ,8P d8'   8b  d8                           88888888                         I8  8I\e[1m"
		echo -e "\e[32m     88   88         Y88\"           88aaaad8P\" ,8I    \"Y88P'                              I8                            I8  8'\e[1m"
		echo -e "\e[32m     Y8   8P        ,888b           88\"\"\"\"\"    I8'             ,ggggg,     ,ggg,,ggg,     I8     ,gggggg,    ,ggggg,    I8 dP \e[1m"
